Programa
#include "stdafx.h"
#include <iostream>
#include <math.h>
#include <stdio.h>

// Con este programa endremos el area y el perimetro de una circunferencia
//

using namespace std;

int main() {

	system("color 0A");

	float A = 0, P = 0, R = 0, Pi = 3.1416; 

	cout << "Ingrese el valor del Radio: ";
	cin >> R;

	A = pow(R,2) * Pi;

	P = 2 * Pi * R;

	cout << "El area es: " << A << endl;
	
	cout << "El perimetro es: " << P << endl;
	
	system("pause");

}
