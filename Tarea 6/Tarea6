5.#include <iostream>
// a) Expresi√≥n requerida para usar funciones iostream

void main(){
  float arista;
  
  cout << "Escribe la longitud de la arista del cubo: ";
  cin >> arista;
  
  float volumen;
volumen = pow(arista, 3);
  
  cout << "El volumen del cubo es " << volumen << endl;
}

6.#include <iostream>
#include <math.h>

void main(){
  float a = 5.6;
  float b = 8.4;
  float c;
  
  c = round(a); // a) 6
  c = round(b); // b) 8
  
  c = floor(b); // c) 8
  c = ceil(b); // d) 9
}

7. #include <iostream>

void main(){
  bool a = 8 <= 8;
  bool b = 4 != 5;
  bool c;
  
  c = a && a; // a) true
  c = a || a; // b) true
  
  c = a && b; // c) true
  c = b || a; // d) true
}

